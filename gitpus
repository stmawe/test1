#!/bin/bash

# Prompt for GitHub username and email
read -p "Enter your GitHub username: " username
git config --global user.name "$username"

read -p "Enter your GitHub email: " email
git config --global user.email "$email"

# Set the current directory as a safe Git directory
git config --global --add safe.directory "$(pwd)"

# Check if inside a Git repository
if [ ! -d ".git" ]; then
    echo "Not a git repository. Initializing..."
    git init
    read -p "Enter the GitHub repository URL: " repo_url
    git remote add origin "$repo_url"
fi

# Prompt for branch name (default: main)
read -p "Enter the branch to push to (default: main): " branch
branch=${branch:-main}

# Ensure the branch name is correctly set
git branch -M "$branch"

# Add all changes
git add .

# Prompt for commit message
read -p "Enter commit message: " commit_message
git commit -m "$commit_message"

# Push changes
git push -u origin "$branch"

echo "Changes pushed successfully!"
